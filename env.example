# AI2Fin Documentation Environment Configuration

# Node.js Configuration
NODE_VERSION=18
NPM_VERSION=8

# Mintlify Configuration
MINTLIFY_API_KEY=your_mintlify_api_key_here
MINTLIFY_PROJECT_ID=ai2fin-docs

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
CLOUDFLARE_PROJECT_NAME=ai2fin-docs

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# SEO Configuration
SITE_URL=https://ai2fin.com/docs
CANONICAL_URL=https://ai2fin.com/docs

# Build Configuration
BUILD_COMMAND=npm run build
BUILD_OUTPUT_DIR=dist
ROOT_DIRECTORY=/

# Development
NODE_ENV=production
MINTLIFY_DEV_PORT=3000

# Optional: Custom domain for development
DEV_DOMAIN=localhost:3000
